# ULTRA Environment Configuration Example
# Copy this file to .env and customize the values for your setup

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# Application Environment
NODE_ENV=development
DEBUG=true
ULTRA_LOG_LEVEL=info
ULTRA_LOG_FORMAT=json

# Server Configuration
ULTRA_HOST=127.0.0.1
ULTRA_PORT=8000
SERVER_WORKERS=4
ULTRA_CORS_ORIGINS=http://localhost,http://127.0.0.1

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7

# Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Local MLX Models (Apple Silicon)
MLX_MODELS_PATH=./models/mlx
ULTRA_DEFAULT_CHAT_MODEL=mlx-community/Llama-3.2-3B-Instruct-4bit
ULTRA_DEFAULT_EMBEDDING_MODEL=mlx-community/bge-small-en-v1.5-f16

# =============================================================================
# EMBEDDING CONFIGURATION
# =============================================================================

# Embedding Model Settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIMENSIONS=384
EMBEDDING_BATCH_SIZE=32

# FAISS Configuration
FAISS_INDEX_PATH=./indexes
FAISS_INDEX_TYPE=IVF
FAISS_NLIST=100
FAISS_NPROBE=10

# =============================================================================
# DATA SOURCES
# =============================================================================

# Firecrawl Configuration
FIRECRAWL_API_KEY=your_firecrawl_api_key_here
FIRECRAWL_BASE_URL=https://api.firecrawl.dev
FIRECRAWL_MAX_PAGES=100
FIRECRAWL_TIMEOUT=30

# Knowledge Base Paths
KB_DATA_PATH=./data/knowledge
KB_CACHE_PATH=./data/cache
KB_INDEX_PATH=./data/indexes

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite Configuration (default)
DATABASE_URL=sqlite:///./ultra.db
DATABASE_ECHO=false

# PostgreSQL Configuration (optional)
# DATABASE_URL=postgresql://username:password@localhost:5432/ultra
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=ultra
# POSTGRES_USER=ultra_user
# POSTGRES_PASSWORD=your_postgres_password

# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./storage
MAX_FILE_SIZE=10MB

# S3 Configuration (optional)
# STORAGE_TYPE=s3
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_BUCKET_NAME=ultra-storage
# AWS_REGION=us-west-2

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Security
API_RATE_LIMIT=100
API_RATE_LIMIT_WINDOW=60
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# =============================================================================
# MONITORING & LOGGING
# =============================================================================

# Logging Configuration
LOG_FORMAT=json
LOG_FILE=./logs/ultra.log
LOG_ROTATION=daily
LOG_RETENTION_DAYS=30

# Metrics Configuration
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Development Tools
HOT_RELOAD=true
AUTO_MIGRATE=true
SEED_DATA=false

# Testing Configuration
TEST_DATABASE_URL=sqlite:///./test.db
TEST_PARALLEL=true

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================

# Cursor IDE Integration
CURSOR_PROJECT_PATH=./
CURSOR_AI_MODEL=claude-3-sonnet

# Crush Shell Integration
CRUSH_SHELL_PATH=/usr/local/bin/crush
CRUSH_CONFIG_PATH=~/.crush/config

# LaunchAgent Configuration
LAUNCH_AGENT_ENABLED=true
REINDEX_SCHEDULE=0 2 * * *  # Daily at 2 AM
CLEANUP_SCHEDULE=0 3 * * 0  # Weekly on Sunday at 3 AM

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_TYPE=memory

# Async Configuration
ASYNC_POOL_SIZE=10
ASYNC_TIMEOUT=30

# Resource Limits
MAX_MEMORY_MB=2048
MAX_CPU_CORES=4
MAX_CONCURRENT_REQUESTS=100

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Experimental Features
ENABLE_EXPERIMENTAL_FEATURES=false
ENABLE_ADVANCED_REASONING=false
ENABLE_MULTIMODAL=true
ENABLE_VOICE_INTERFACE=false

# UI Features
ENABLE_WEB_UI=true
ENABLE_MOBILE_UI=false
ENABLE_DARK_MODE=true

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=./backups
BACKUP_SCHEDULE=0 4 * * *  # Daily at 4 AM
BACKUP_RETENTION_DAYS=7

# Recovery Configuration
AUTO_RECOVERY=true
RECOVERY_TIMEOUT=300
# Local-first policy
ULTRA_ALLOW_OPENAI=0
